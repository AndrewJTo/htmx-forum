<html>
  <head>
    <script src="https://unpkg.com/htmx.org@1.9.12"></script>
  </head>
  <body>
    <h1>Forum</h1>
    <p>
      <a hx-get="register" hx-target="body" hx-push-url="true">Register</a>
    </p>
    <table>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Options</th>
      </tr>
      {{ range .categories}}
        <tr>
          <td>{{ .Name }}</td>
          <td>{{ .Description }}</td>
          <td><button hx-get="/category/{{.Id}}" hx-target="body" hx-push-url="true">View</button></td> 
        </tr>
      {{ end }}
    </table>
  </body>
</html>